@model IEnumerable<EurecertV2.Models.Company>

@{
    ViewData["Title"] = "Kurumlar";
}

<h2>Kurumlar</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Website)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProposalAbstract)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProposalFile)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProposalResult)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.DownPayment)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CompanyRequests)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.VisitCount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CompanyFunction)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.SalesPerson)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalAbstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownPayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyRequests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyFunction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPerson.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ayrıntılar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
