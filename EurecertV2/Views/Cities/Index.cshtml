@model IEnumerable<EurecertV2.Models.City>

@{
    ViewData["Title"] = "Şehirler";
}

<h2>Şehirler</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ayrıntılar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
